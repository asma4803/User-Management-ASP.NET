
@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <h2>User Login</h2>
</div>

<form action="~/User/UserLogin" method="post">
    <table>
        <tr>
            <td> Login :</td>
            <td><input type="text" id="txtLogin" value="@ViewBag.username" name="txtLogin" required /></td>
            <td><span style="color:red">@ViewBag.userError</span></td>
        </tr>
        <tr>
            <td>Password : </td>
            <td> <input type="password" id="txtPass" name="txtPass" required /></td>
            <td><span style="color:red">@ViewBag.passError</span></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input class="btn btn-default" type="submit" vlaue="Login" name="btnLogin" id="btnLogin" />
                <input type="reset" value="Cancel" class="btn btn-default" /></>
        </tr>
        <tr>
            <td></td>
            <td><span style="color:red">@ViewBag.message</span></td>
        </tr>
    </table>
</form>

<form action="~/User/SendEmail" method="post">
    <table>
        <tr>
            <td>
                <label>Forget Password?</label>
            </td>

        </tr>
        <tr>
            <td>Email :</td>
            <td> <input type="email" id="e_email" name="e_eamil" required /></td>
        </tr>
        <tr>
            <td></td>
            <td><button type="submit" class="btn btn-default">Resend Password</button></td>
        </tr>
    </table>
</form>
    

